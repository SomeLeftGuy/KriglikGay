<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/theme.bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    @{
        if (User.IsInRole("Dark"))
        {
            <link rel="stylesheet" href="~/css/dark.css" />
        }
    }

</head>
<body class="dark_2">
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery.tablesorter.min.js"></script>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm dark">
        <h5 class="my-0 mr-md-auto font-weight-normal">Crowdfunding campaign</h5>
        <form class="mr-md-auto d-flex" asp-controller="Home" asp-action="Index">
            <input name="filter" class="form-control mr-1" placeholder="Tags">
            <button class="btn btn-primary" type="submit">Search</button>
        </form>
        @if (User.Identity.IsAuthenticated)
        {
            <p class="my-0 mr-3">@User.Identity.Name</p>
            <a class="btn btn-outline-primary mr-3" asp-controller="Home" asp-action="Index">Home</a>
            <a class="btn btn-outline-primary mr-3" asp-controller="Profile" asp-action="Index">Profile</a>
            <a class="btn btn-outline-primary" asp-controller="Account" asp-action="LogOff">Logout</a>
        }
        else
        {
            <a class="btn btn-outline-primary mr-3" asp-controller="Home" asp-action="Index">Home</a>
            <a class="btn btn-outline-primary mr-3" asp-controller="Account" asp-action="Login">Sign in</a>
            <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Register">Sign up</a>
        }
    </div>

    <div class="container dark_2">
        @RenderBody()
    </div>

    <footer class="footer mt-5 mb-5">
        <div class="container text-center">
            <span class="text-muted">Designed by Andrey Kavetski, Itransition 2019</span>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
